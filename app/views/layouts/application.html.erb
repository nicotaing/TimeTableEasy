<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>TimeTableEasy</title>
	<%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery', 'fullcalendar', 'gcal', 'application', 'awesteph' %>
	<%= javascript_include_tag 'jquery-ui-custom', 'jquery.treeTable' %>
	
  <%= stylesheet_link_tag "styles", 'fullcalendar', 'jquery-ui', 'dialog','jquery.treeTable' %>

	<script type="text/javascript">

	$(document).ready(function()  {
	  $("#tree").treeTable();
	});
	
	function popUp(URL) {
	day = new Date();
	id = day.getTime();
	eval("page" + id + " = window.open(URL, '" + id + "', 'toolbar=0,scrollbars=1,location=0,statusbar=0,menubar=0,resizable=1,width=600,height=600');");
	}
	
	function popUpUser(url) {
		window.open(url, 'userDetails','toolbar=0,scrollbars=1,location=0,statusbar=0,menubar=0,resizable=1,width=600,height=600;');
		return false;
	}
	  </script>

</head>
<body>
	<div id="container">
		<div id="container-inner">
				<%= render :partial => 'layouts/top_bar' %>
			
			<div id="content">
				<div id="content-inner">
					<div id="events">
						<br/><br/>
						<%= yield %>
					</div>
					<% if @current_user %>
						<%= render :partial => 'layouts/sidebar' %>
					<% end %>
					</div>
				</div>
			</div>
			
		</div>
	</div>
</body>
</html>
